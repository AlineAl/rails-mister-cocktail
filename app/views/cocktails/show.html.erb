<h1><%= @cocktail.name %></h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= @cocktail.doses.each do |dose| %>
        <%= dose.ingredient.name %>
        <%= dose.description %>
        <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you okay ?"} %>
      <% end %>
    </div>
  </div>
</div>


<div>
  <%= link_to cocktails_path do %>
    <i class="fa fa-history"></i> Back to list
  <% end %>
  <%= render "doses/new", cocktail: @cocktail, dose: @dose %>
</div>
